<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="YALA.Views.ProgressBarDialog">

	<StackPanel Margin="20" Spacing="10">
		<TextBlock x:Name="MessageText" Text="Running YOLO inferences..." HorizontalAlignment="Center" />
		<ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Height="20" />
		<TextBlock x:Name="PercentText" Text="0%" HorizontalAlignment="Center" />

		<Button x:Name="CancelButton"
                Content="Cancel"
                HorizontalAlignment="Center"
                Width="80"
                Click="OnCancelClick"/>
	</StackPanel>
</UserControl>
