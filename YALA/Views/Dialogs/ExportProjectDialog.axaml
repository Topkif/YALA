<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:local="clr-namespace:YALA.Views"
             x:Class="YALA.Views.ExportProjectDialog">

	<Grid Margin="20" RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,*">

		<!-- Path Selection -->
		<StackPanel Grid.ColumnSpan="2" Margin="0,0,0,20">
			<TextBlock Text="Destination Folder:" FontWeight="Bold" Margin="0,0,0,8"/>
			<StackPanel Orientation="Horizontal">
				<TextBox x:Name="FilePathTextBox" Margin="0,0,8,0" Width="260" IsReadOnly="True" />
				<Button Content="Browse..." Click="OnBrowseClicked" />
			</StackPanel>
		</StackPanel>

		<!-- Classes Selection (Left) -->
		<StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,20,0">
			<TextBlock Text="Select Classes:" FontWeight="Bold" Margin="0,0,0,8"/>
			<ScrollViewer MaxHeight="300">
				<ItemsControl x:Name="ClassList">
					<ItemsControl.ItemTemplate>
						<DataTemplate DataType="local:SelectableClass">
							<CheckBox IsChecked="{Binding IsChecked}">
								<TextBlock Text="{Binding Name}" xml:space="preserve"/>
							</CheckBox>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</ScrollViewer>
		</StackPanel>

		<!-- Sliders (Right) -->
		<ScrollViewer Grid.Row="1" Grid.Column="1" MaxHeight="300">
			<StackPanel >
				<TextBlock Text="Train / Val / Test Split:" FontWeight="Bold" Margin="0,0,0,8"/>
				<TextBlock x:Name="TrainCountText"/>
				<Slider x:Name="TrainSlider" Minimum="0" Maximum="1" Value="0.8" TickFrequency="0.01" Margin="0,0,0,5"/>
				<TextBlock x:Name="ValCountText"/>
				<Slider x:Name="ValSlider" Minimum="0" Maximum="1" Value="0.2" TickFrequency="0.01" Margin="0,0,0,5"/>
				<TextBlock x:Name="TestCountText"/>
				<Slider x:Name="TestSlider" Minimum="0" Maximum="1" Value="0" TickFrequency="0.01" Margin="0,0,0,5"/>
			</StackPanel>
		</ScrollViewer>

		<!-- Buttons (Bottom Right) -->
		<StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0 10 0 0">
			<Button Content="Cancel" Click="OnCancelClicked" />
			<Button Content="Export" Click="OnExportClicked" />
		</StackPanel>
	</Grid>
</UserControl>
