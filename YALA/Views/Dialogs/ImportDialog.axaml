<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="240"
             x:Class="YALA.Views.ImportDialog">


	<Grid Margin="20" RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*">

		<!-- Images picker -->
		<TextBlock Text="Images (optional):" Grid.Row="0" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
		<StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="10">
			<TextBlock x:Name="ImagesCountText" VerticalAlignment="Center" Width="200"/>
			<Button Content="Browse..." Click="OnBrowseImages"/>
		</StackPanel>

		<!-- Annotations picker -->
		<TextBlock Text="Annotations (optional):" Grid.Row="1" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
		<StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="10">
			<TextBlock x:Name="AnnotationsCountText" VerticalAlignment="Center" Width="200"/>
			<Button Content="Browse..." Click="OnBrowseAnnotations"/>
		</StackPanel>

		<!-- Class names picker -->
		<TextBlock Text="Class Names File (optional):" Grid.Row="2" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
		<StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="10">
			<TextBlock x:Name="ClassesPathText" VerticalAlignment="Center" Width="200" TextTrimming="CharacterEllipsis"/>
			<Button x:Name="BrowseClassesButton" Content="Browse..." Click="OnBrowseClasses"/>
		</StackPanel>

		<!-- Use existing labels checkbox -->
		<CheckBox x:Name="UseExistingLabelsCheckBox"
				  Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
				  Content="Use existing project labels"
				  IsChecked="False"
				  Margin="0,10,0,0"/>

		<!-- Buttons -->
		<StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
					Orientation="Horizontal" HorizontalAlignment="Right"
					Spacing="10" Margin="0,20,0,0">
			<Button Content="Cancel" Click="OnCancelClicked"/>
			<Button Content="Import" Click="OnImportClicked" Background="Red"/>
		</StackPanel>
	</Grid>

</UserControl>
