<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:cp="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.ColorPicker"
             x:Class="YALA.Views.NewClassDialog">
	
	<StackPanel Margin="20" Spacing="10" Width="300">
		<TextBlock Text="Class Name:"/>
		<TextBox x:Name="ClassNameBox"/>

		<TextBlock Text="Bounding Box Color:"/>
		<cp:ColorPicker IsAlphaEnabled="False"
                        IsAlphaVisible="False"
                        HorizontalAlignment="Stretch"
                        ColorChanged="OnDialogColorChanged"/>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
			<Button Content="Cancel" Click="OnCancelClick"/>
			<Button Content="OK" Click="OnOkClick"/>
		</StackPanel>
	</StackPanel>
</UserControl>
